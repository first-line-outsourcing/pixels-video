<ExtensionManifest Version="9.0" ExtensionBundleId="com.adobe.pexelsvideo" ExtensionBundleVersion="1.0"
                   ExtensionBundleName="CEP Images"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ExtensionList>
    <Extension Id="com.adobe.pexelsvideo" Version="1.0" />
  </ExtensionList>
  <ExecutionEnvironment>
    <HostList>
      <Host Name="PPRO" Version="9.0"/>
    </HostList>
    <LocaleList>
      <Locale Code="All" />
    </LocaleList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="9.0" />
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>
    <Extension Id="com.adobe.pexelsvideo">
      <DispatchInfo>
        <Resources>
          <MainPath>./dist/index.html</MainPath>
          <ScriptPath>./dist/assets/jsx/PProPanel.jsx</ScriptPath>
          <CEFCommandLine>
            <Parameter>--allow-file-access</Parameter>
            <Parameter>--allow-file-access-from-files</Parameter>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--off-screen-rendering-enabled</Parameter>
            <Parameter>--enable-media-stream</Parameter>
            <Parameter>--enable-cors</Parameter>
          </CEFCommandLine>
        </Resources>
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        <UI>
          <Type>Panel</Type>
          <Menu>Pexels Video</Menu>
          <Geometry>
            <Size>
              <Height>500</Height>
              <Width>420</Width>
            </Size>
          </Geometry>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>
